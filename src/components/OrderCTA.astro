---
/**
 * Order CTA Section with Interactive Elements
 */
---

<section class="relative w-full py-20 md:py-28 overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary to-secondary">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-white rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
      <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-white rounded-full mix-blend-multiply filter blur-3xl animate-blob" style="animation-delay: 2s;"></div>
    </div>
  </div>

  <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-8 animate-fade-in-up">
      {/* Main Heading */}
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">
        Ready for Some
        <span class="block bg-gradient-to-r from-yellow-200 to-yellow-100 bg-clip-text text-transparent">
          Minion Magic?
        </span>
      </h2>

      {/* Description */}
      <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed">
        Order your favorite donuts online and have them delivered fresh to your door, or pick up at our shop.
      </p>

      {/* Quick Stats */}
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 py-8 border-y border-white/20">
        {[
          { icon: "ðŸšš", text: "Free Delivery Over $30" },
          { icon: "â±ï¸", text: "Ready in 2-3 Days" },
          { icon: "ðŸ”„", text: "Satisfaction Guaranteed" }
        ].map((stat, index) => (
          <div class="flex flex-col items-center gap-2 group cursor-pointer">
            <span class="text-3xl group-hover:scale-125 transition-transform duration-300">{stat.icon}</span>
            <p class="text-white/80 group-hover:text-white transition-colors font-medium">{stat.text}</p>
          </div>
        ))}
      </div>

      {/* CTA Buttons */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
        <button class="group relative px-10 py-4 bg-white text-primary rounded-full font-bold text-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-black/30 hover:-translate-y-1">
          <span class="relative z-10 flex items-center justify-center gap-2 group-hover:translate-x-1 transition-all">
            <span>ðŸ›’ Order Online</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </button>

        <button class="group relative px-10 py-4 border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white/10 transition-all duration-300 hover:shadow-lg hover:shadow-white/20 flex items-center justify-center gap-2">
          <span>ðŸ“ž Call Us</span>
          <svg class="w-5 h-5 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </button>
      </div>

      {/* Discount Banner */}
      <div class="mt-12 animate-fade-in-up" style="animation-delay: 0.3s">
        <div class="inline-block bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-6 py-4 hover:bg-white/20 transition-all duration-300 cursor-pointer group">
          <div class="flex items-center gap-2">
            <span class="text-2xl animate-bounce">ðŸŽ‰</span>
            <span class="text-white font-semibold">
              New customers get
              <span class="text-yellow-200 font-bold"> 10% OFF </span>
              your first order with code
              <span class="text-yellow-200 font-bold">MINION10</span>
            </span>
          </div>
        </div>
      </div>

      {/* Payment Methods */}
      <div class="flex justify-center items-center gap-4 pt-8 flex-wrap">
        <span class="text-white/70 text-sm font-medium">Secure Payment:</span>
        {["ðŸ’³", "ðŸ¦", "ðŸ“±", "ðŸ›¡ï¸"].map((method, index) => (
          <button
            key={index}
            class="text-2xl hover:scale-125 transition-all duration-300 hover:drop-shadow-lg"
            title={["Credit Card", "Bank Transfer", "Mobile Pay", "Secure"][index]}
          >
            {method}
          </button>
        ))}
      </div>
    </div>
  </div>
</section>

<style is:global>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-bounce {
    animation: bounce 1s infinite;
  }
</style>
