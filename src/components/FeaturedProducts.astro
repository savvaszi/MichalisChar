---
/**
 * Featured Products Section with Interactive Cards
 */
interface Product {
  id: number;
  name: string;
  description: string;
  price: number;
  emoji: string;
  rating: number;
  reviews: number;
  badge?: string;
}

const products: Product[] = [
  {
    id: 1,
    name: "Classic Yellow",
    description: "Bright yellow frosting with banana flavor",
    price: 4.99,
    emoji: "üü°",
    rating: 4.8,
    reviews: 324,
    badge: "Best Seller"
  },
  {
    id: 2,
    name: "Evil Blue",
    description: "Deep blue frosting with blueberry swirl",
    price: 5.49,
    emoji: "üîµ",
    rating: 4.9,
    reviews: 287,
    badge: "Customer Favorite"
  },
  {
    id: 3,
    name: "Chocolate Dream",
    description: "Rich chocolate with sprinkles",
    price: 5.99,
    emoji: "üç´",
    rating: 4.7,
    reviews: 156
  },
  {
    id: 4,
    name: "Rainbow Party",
    description: "Multi-colored frosting with candy bits",
    price: 6.49,
    emoji: "üåà",
    rating: 5.0,
    reviews: 98,
    badge: "New"
  },
];
---

<section class="relative w-full py-20 md:py-28 overflow-hidden bg-surface">
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,_var(--tw-colors-primary)_1px,_transparent_1px)]" style="background-size: 40px 40px;"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center space-y-4 mb-16 animate-fade-in-up">
      <div class="inline-block">
        <span class="px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold tracking-wide">
          üåü Our Specialties
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-content">
        Signature Flavors
      </h2>
      <p class="text-lg text-content-light max-w-2xl mx-auto">
        Hand-picked favorites that keep our customers coming back for more
      </p>
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {products.map((product, index) => (
        <div
          class="group relative bg-white rounded-2xl overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 cursor-pointer animate-fade-in-up border border-outline/10"
          style={`animation-delay: ${index * 100}ms`}
        >
          {/* Badge */}
          {product.badge && (
            <div class="absolute top-4 right-4 z-10">
              <span class={`px-3 py-1 rounded-full text-xs font-bold tracking-wide ${
                product.badge === 'Best Seller' ? 'bg-accent/20 text-accent' :
                product.badge === 'Customer Favorite' ? 'bg-primary/20 text-primary' :
                'bg-secondary/20 text-secondary'
              } group-hover:scale-110 transition-transform duration-300`}>
                {product.badge}
              </span>
            </div>
          )}

          {/* Product Image Area */}
          <div class="relative h-48 bg-gradient-to-br from-primary/5 to-secondary/5 overflow-hidden flex items-center justify-center group-hover:from-primary/10 group-hover:to-secondary/10 transition-colors duration-300">
            <div class="relative">
              <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <span class="text-7xl group-hover:scale-125 group-hover:-translate-y-2 transition-all duration-500 inline-block">
                {product.emoji}
              </span>
            </div>
          </div>

          {/* Product Info */}
          <div class="p-6 space-y-4">
            <div>
              <h3 class="text-lg font-bold text-content group-hover:text-primary transition-colors duration-300">
                {product.name}
              </h3>
              <p class="text-sm text-content-light mt-1">
                {product.description}
              </p>
            </div>

            {/* Rating */}
            <div class="flex items-center gap-2 pt-2 border-t border-outline/20">
              <div class="flex items-center gap-1">
                {[...Array(5)].map((_, i) => (
                  <svg
                    key={i}
                    class={`w-4 h-4 transition-all duration-300 ${
                      i < Math.floor(product.rating)
                        ? 'text-accent fill-accent'
                        : 'text-outline/30'
                    } group-hover:scale-110`}
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <span class="text-xs text-content-light font-medium">
                ({product.reviews})
              </span>
            </div>

            {/* Price and CTA */}
            <div class="flex items-center justify-between pt-4 border-t border-outline/20">
              <div>
                <span class="text-2xl font-bold text-primary">${product.price.toFixed(2)}</span>
              </div>
              <button class="p-3 rounded-full bg-primary/10 text-primary hover:bg-primary hover:text-white transition-all duration-300 group-hover:scale-110 hover:shadow-lg hover:shadow-primary/30">
                <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </button>
            </div>
          </div>

          {/* Hover Effect Line */}
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary to-secondary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
        </div>
      ))}
    </div>

    <!-- View All Button */
    <div class="text-center animate-fade-in-up" style="animation-delay: 400ms">
      <button class="group relative px-8 py-4 rounded-full font-semibold text-primary border-2 border-primary overflow-hidden transition-all duration-300 hover:text-white hover:shadow-lg hover:shadow-primary/30 inline-flex items-center gap-2">
        <span class="absolute inset-0 bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left -z-10"></span>
        <span class="relative">View All Products</span>
        <svg class="w-5 h-5 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<style is:global>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
